<?xml version="1.0" ?>
<ruleset name="php-framework">
	<description>php-framework's phpcs</description>

	<arg name="colors"/>
	<arg value="p"/>

	<file>src</file>
	<file>public/index.php</file>

	<rule ref="PSR2">
		<exclude name="PSR1.Classes.ClassDeclaration.MissingNamespace"/>
	</rule>
	<rule ref="Generic.Arrays.DisallowLongArraySyntax"></rule>
</ruleset>
