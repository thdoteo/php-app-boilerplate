{% extends '@admin/layout.twig' %}

{% block title "Edit category " ~ item.name %}

{%  block body %}
    <h1>Edit category {{ item.name }}</h1>

    <form action="{{ path(routesPrefix ~ '.edit', {id: item.id}) }}" method="post">
        {% include viewsPrefix ~ '/form.twig' %}
        <button class="btn btn-primary" type="submit">Edit</button>
    </form>

{% endblock %}