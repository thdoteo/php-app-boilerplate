{% extends 'layout.twig' %}

{% block title "My articles" %}

{%  block body %}
    <h1>Blog</h1>
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}">
                    {{ post.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}