{% extends 'layout.twig' %}

{% block title "My articles" %}

{%  block body %}
    <h1>Blog</h1>

    <div class="row">
        {% for row in posts | batch(3) %}
            <div class="card-deck">
                {% for post in row %}
                    <div class="card">
                        <div class="card-header">
                            <h2>
                                <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}">
                                    {{ post.name }}
                                </a>
                            </h2>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                {{ post.content | excerpt | nl2br }}
                            </p>
                            <p class="text-muted">
                                {{ post.created_at | ago }}
                            </p>
                        </div>
                        <div class="card-footer">
                            <a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}" class="btn btn-primary">Read</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>

    {{ paginate(posts, 'blog.index') }}

{% endblock %}